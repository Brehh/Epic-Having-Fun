# Online Python compiler (interpreter) to run Python online.
# Write Python 3 code in this online editor and run it.
import random

def mainList():
    l = []
    for i in range(ord(' '),ord('~')+1):
        l.append(chr(i))
    random.shuffle(l)
    return l

def tryremove(tab,wanted):
    try:
        tab.remove(wanted)
    except:
        pass

def encode_char(encoder,wanted,d):
    new_d = d[:]
    tryremove(new_d,wanted)
    random_i = random.choice(new_d)
    tryremove(d,random_i)
    encoder[wanted] = random_i

def encode_all(encoder,d,l):
    for i in l:
        encode_char(encoder,i,d)

def encode(wow,encoder):
    new_in = ""
    for i in wow:
        new_in += encoder[i]
    return new_in

def decode(wow,encoder):
    decoder = {v:i for i,v in encoder.items()}
    new_in = ""
    for i in wow:
        new_in += decoder[i]
    return new_in

def get_encoder(encoder):
    encoder_str = ""
    for i,v in encoder.items():
        encoder_str += i+v
    return encoder_str

def random_encode():
    l,d = mainList(),mainList()
    encoder = {}
    encode_all(encoder,d,l)
        
    plr_in = input("Enter Something U Want to Encode: ")
    
    encode_in = encode(plr_in,encoder)
    token = get_encoder(encoder)
    print("Encoder --> :" + encode_in)
    print("Tokens --> :" + token)

def random_encode2(token):
    encoder = {}
    for i in range(0,len(token),2):
        encoder[token[i]] = token[i+1]
        
    plr_in = input("Enter Something U Want to Decode: ")
    
    decode_huh = decode(plr_in,encoder)
    print("Decoder --> :" + decode_huh)
    

plr_in = input("Do you have tokens? (1 for yes): ")
print()
if plr_in != '1':
    random_encode()
else:
    while True:
        gettoken = input("Input Tokens --> : ")
        if len(gettoken) == 190:
            break
        print("Invalid Tokens Please Try Again")
        print()
    print()
    random_encode2(gettoken)
